<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>名前</div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>メールアドレス</div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            パスワード
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>パスワード再入力</div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>大学名</div>
          <div class='field-input'>
            <%= f.text_field :school, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>学部</div>
          <div class='field-input'>
            <%= f.text_field :department, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>学科・専攻</div>
          <div class='field-input'>
            <%= f.text_field :course, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>学年</div>
          <div class='field-input'>
            <%= f.text_field :grade, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
        
      </div>
    <% end %>
  </div>
</div>
