<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "ログアウト", "#", class: 'btn'%>
      <%= link_to "チャットページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>名前</div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>メールアドレス</div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>大学名</div>
          <div class='field-input'>
            <%= f.text_field :school, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>学部</div>
          <div class='field-input'>
            <%= f.text_field :department, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>学科・専攻</div>
          <div class='field-input'>
            <%= f.text_field :course, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>学年</div>
          <div class='field-input'>
            <%= f.text_field :grade, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "情報を更新する", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
